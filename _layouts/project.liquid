{% include header.html %}

{% assign project = false %}

{% for project_data in site.data.projects %}
	{% if project_data.title == page.title %}
		{% assign project = project_data %}
	{% endif %}
{% endfor %}

<section>
	<div class="section section--large spacing-huge-top">
		<figure class="browser">
			<div class="browser__actions">
				<span></span>
				<span></span>
				<span></span>
			</div>

			<div class="browser__inner">
				<img src="{{ project.full_preview }}" alt="{{ project.title }}">
			</div>
		</figure>
	</div>

	{% if project.sections[0].content or project.sections[0].title %}
		<div class="section section--small spacing-large-top">
			<div class="spacing-small-bottom">
				<h2 class="section-title">
					{{ project.sections[0].title }}
				</h2>
			</div>

			<div class="content-styles">
				<p class="txt-large">
					{{ project.sections[0].content }}
				</p>
			</div>
		</div>
	{% endif %}

	<div class="section section--large spacing-large-top">
		<div class="grid grid__col--h-center grid--tb1-2 grid--m-1">
			{% for image in project.images limit:3 %}
				<div class="grid__col grid__col--4">
					<div class="content-styles">
						<img src="{{ image }}" alt="">
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

	{% if project.sections[1].content or project.sections[1].title %}
		<div class="section section--small spacing-large-top">
			<div class="spacing-small-bottom">
				<h2 class="section-title">
					{{ project.sections[1].title }}
				</h2>
			</div>

			<div class="content-styles">
				<p class="txt-large">
					{{ project.sections[1].content }}
				</p>
			</div>
		</div>
	{% endif %}

	<div class="section section--large spacing-large-top">
		<div class="grid grid__col--h-center grid--tb1-2 grid--m-1">
			{% for image in project.images offset:3 %}
				<div class="grid__col grid__col--4">
					<div class="content-styles">
						<img src="{{ image }}" alt="">
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

	{% if project.live_url %}
		<div class="section section--small spacing-large-top">
			<div class="txt-center">
				<a class="btn btn--large" href="{{ project.live_url }}" target="_blank">
					Visit Website
				</a>
			</div>
		</div>
	{% endif %}
</section>

<div class="spacing-huge-top"></div>

{% assign testimonial = site.data.testimonials[project.testimonial_id] %}
{% include testimonial.html %}

{% include footer.html %}
